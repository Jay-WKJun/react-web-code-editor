{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"outDir": "dist",
		"rootDir": ".",
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"*": ["node_modules/*"],
		}
	},
	"exclude": [
		"node_modules",
    "dev",
    "*.config.js",
    "dist"
	]
}
